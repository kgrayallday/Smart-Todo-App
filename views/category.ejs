<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>SMART TO-DO</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel='icon' href='https://cdn1.iconfinder.com/data/icons/user-interface-cute-vol-4/52/tick__mind__head__brain-20.png'>
    <!-- EXTERNAL CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <!-- EXTERNAL JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  </head>
  <body>
    <%- include('partials/_header') %> <%- include('partials/_back') %>
    <main class="container">
      <h1 class="category-title"><%= pageTitle %></h1>
      <% for (const object of objects) { %>
      <section class="tasks-container">
        <article class="task">
          <div class="task-detail">
            <p class="time-ago"><%= object.created_date.toString().slice(0,15) %></p>
            <p class="task-name"><%= object.title %></p>
            <form
              action="/category/complete/<%= object.entry_id %>"
              method="POST"
            >
              <button class="complete-btn">
                <i class="ri-calendar-check-fill"></i>
              </button>
            </form>
            <div class="dropdown">
              <button class="drop-btn"><i class="ri-more-2-line"></i></button>
              <div class="drop-menu">
                <form
                  class="drop-delete"
                  action="/category/edit/<%= object.entry_id %>"
                  method="GET"
                >
                  <button class="drop-edit" type="submit">
                    <i class="ri-edit-fill"></i>Edit
                  </button>
                </form>
                <form
                  class="drop-delete"
                  action="/category/delete/<%= object.entry_id %>"
                  method="POST"
                >
                  <button class="drop-delete" type="submit">
                    <i class="ri-delete-bin-6-fill"></i>Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        </article>
      </section>
      <% } %>
    </main>
    <%- include('partials/_footer') %>
  </body>
</html>
